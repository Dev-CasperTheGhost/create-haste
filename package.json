{
  "name": "pastebin-api",
  "version": "2.1.0-dev",
  "description": "A very simple pastebin npm package to interact with the pastebin api!",
  "license": "MIT",
  "author": {
    "name": "Dev-CasperTheGhost",
    "url": "https://caspertheghost.me"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,yml}\" --ignore-path .gitignore",
    "types": "tsc --declaration --emitDeclarationOnly --declarationDir dist",
    "types:esm": "cp dist/index.d.ts dist/index.mjs.d.ts",
    "esbuild": "rm -rf dist/ && node esbuild.js && npm run types && npm run types:esm"
  },
  "keywords": [
    "pastebin",
    "hastebin",
    "paste",
    "pastebin-api"
  ],
  "dependencies": {
    "fast-xml-parser": "^3.19.0",
    "node-fetch": "^2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dev-CasperTheGhost/pastebin-api"
  },
  "bugs": {
    "url": "https://github.com/Dev-CasperTheGhost/pastebin-api/issues"
  },
  "homepage": "https://github.com/Dev-CasperTheGhost/pastebin-api#readme",
  "devDependencies": {
    "@casper124578/eslint-config": "^0.0.12",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^15.6.1",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "dotenv": "^10.0.0",
    "esbuild": "^0.12.6",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2
  }
}
